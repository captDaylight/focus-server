extends layout

block content
	div this is the home page
	

	if user
		#user
			h1.text-center.login-title Welcome #{user.firstName}. Check your details below:
				div.signup-wall
					ul.user-details
						li Username ---> #{user.username}
						li Email ---> #{user.email} 
				a(href='/signout', class='text-center new-account') Sign Out
	else 
		a(href='/login') login
		a(href='/signup') signup